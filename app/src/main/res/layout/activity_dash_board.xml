<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#0000"
            android:src="@drawable/pathback"
            android:id="@+id/backD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="115dp"
            android:text="SplitIT"
            android:textColor="#2699FB"
            android:textSize="30dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="110dp"
            android:background="#ffffff"
            android:src="@drawable/menu" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:background="#2699FB"></View>

    <Button
        android:id="@+id/btcreatetrip"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:background="@drawable/rectanglebtn"
        android:drawableRight="@drawable/newbt"
        android:gravity="center"
        android:textSize="13dp"
        android:paddingRight="40dp"
        android:text="Create New Trip"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/btfriends"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:background="@drawable/rectanglebtn"
        android:drawableRight="@drawable/newuser"
        android:paddingRight="40dp"
        android:textSize="13dp"
        android:text="Make new Friends"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/btprevious"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:layout_marginTop="243dp"
        android:background="@drawable/rectanglebtn"
        android:drawableRight="@drawable/preview"
        android:paddingRight="40dp"
        android:text="View Previous Trips"
        android:textColor="#ffff" />

</RelativeLayout>
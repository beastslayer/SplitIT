<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Friend"
            android:id="@+id/tvNameFriend"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_below="@+id/tvNameFriend"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tvAgeFriend"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="SEX"
            android:layout_toRightOf="@+id/tvAgeFriend"
            android:layout_below="@+id/tvNameFriend"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:background="#ffffff"
            android:src="@drawable/baseline_remove_circle_outline_black_18dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>